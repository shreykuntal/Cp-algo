:syntax on
set tabstop=4
set shiftwidth=4
set noexpandtab
%retab!
set autoindent
set ruler
set showcmd
set incsearch
set number
colorscheme solarized8
set cino+=L0
filetype plugin on
let mapleader=","
map <C-S> :w <bar> !clear && g++ -std=c++20 code.cpp -o code && ./code<CR>
map <C-P> :w <bar> !clear && python3 code.py<CR>
map <C-a> <esc>ggVG"+y<CR>
set belloff=all
